/* Confirm Dialog */

@import "colors.rasi"

* {
    background-color:       @bg;
    text-color:             @fg;
	font:				 	"Iosevka Nerd Font 12";
}

window {
    width:      			175px;
    padding:    			10px;
    border:					2px 2px 2px 2px;
    border-radius:          15px;
    border-color:           @bd;
    location:               center;
    y-offset:               -2em;
}

entry {
    expand: 				true;
    text-color:				@ac;
}
